<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarmerSell"
    android:background="@drawable/back1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:textSize="50dp"
            android:paddingTop="30dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="#000"
            android:fontFamily="@font/scriptmt"
            android:text="Select items to sell"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="40dp"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:inputType="textPersonName"
            android:hint="Name"

            android:fontFamily="@font/scriptmt"/>

        <Spinner
            android:padding="10dp"
            android:id="@+id/spinnerProductTypeFarmer"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="40dp"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"

            android:fontFamily="@font/scriptmt" />

        <Spinner
            android:padding="10dp"
            android:id="@+id/spinnerProductNameFarmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:paddingHorizontal="15dp"
            android:id="@+id/quantityProductFarmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20dp"
            android:inputType="number"
            android:hint="Quantity"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/scriptmt"
            />

        <EditText
            android:id="@+id/priceFarmerSellProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:fontFamily="@font/scriptmt"
            android:hint="Price/Kg"
            android:inputType="number"
            android:paddingHorizontal="15dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/sellProductFarmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scriptmt"
            android:onClick="OnClickSell"
            android:text="Sell"
            android:layout_marginHorizontal="20dp"
            android:textAllCaps="false"
            android:textSize="28dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>