<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupAccounts"
    android:background="@drawable/back1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#000"
            android:textColor="#fff"
            android:textSize="60dp"

            android:gravity="center_horizontal"
            android:fontFamily="@font/scriptmt"
            android:text="Group Account" />


        <TextView
            android:id="@+id/grpAccountTotalAsset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="35dp"
            android:textColor="#000"
            android:fontFamily="@font/scriptmt"
            android:textStyle="bold"
            android:text="Total asset-\n\n" />

        <ProgressBar
            android:id="@+id/progressBarGrpAccount"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/listOfGrpMembersAccounts"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>