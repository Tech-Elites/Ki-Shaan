<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:background="#979797"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/indiAccountLayoutCustEmail"
            android:fontFamily="@font/scriptmt"
            android:layout_width="match_parent"

            android:background="#000"
            android:textColor="#fff"
            android:text="Item name"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:layout_marginVertical="1dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/indiAccountLayoutItemName"
            android:layout_width="match_parent"
            android:layout_marginVertical="3dp"
            android:layout_height="wrap_content"
            android:text="Item name"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:background="#000"
            android:textColor="#fff"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/scriptmt"
            />
        <TextView
            android:id="@+id/indiAccountLayoutPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:text="Price of the product-"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:background="#000"
            android:textColor="#fff"
            android:fontFamily="@font/scriptmt"
            />
        <TextView
            android:id="@+id/indiAccountLayoutQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:text="Quantity-"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:background="#000"
            android:layout_marginTop="3dp"
            android:textColor="#fff"
            android:fontFamily="@font/scriptmt"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>