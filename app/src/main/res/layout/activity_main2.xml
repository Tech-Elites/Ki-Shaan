<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#000"
            android:fontFamily="@font/scriptmt"
            android:gravity="center_horizontal"
            android:text="Account"
            android:paddingTop="20dp"
            android:textColor="#fff"
            android:textSize="60dp"/>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="4dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Gurvinder" />

            <TextView
                android:id="@+id/textView14"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs. 27,000" />

            <TextView
                android:id="@+id/textView15"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Need for Surgery" />
        </LinearLayout>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Devansh"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:text="Name: Devansh" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:text="Rs. 40,000" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:text="Daughter's Marriage" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>