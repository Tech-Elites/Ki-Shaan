<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BorrowMoneyFarmer"
    android:background="@drawable/back1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#000"
            android:fontFamily="@font/scriptmt"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:text="Need some help??" />

        <TextView
            android:id="@+id/borrowMoneyTotalAssets"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:layout_height="100dp"
            android:textColor="#000"
            android:textSize="25dp"
            android:fontFamily="@font/scriptmt"
            android:text="Total assets-20000\n\nMoney spent-10000" />

        <EditText
            android:id="@+id/borrowMoneyAskHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/scriptmt"
            android:textSize="25dp"
            android:inputType="textPersonName"
            android:hint="Dont hesitate to ask for help!"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/borrowMoneyWhyHelp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:ems="10"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/scriptmt"
            android:textSize="25dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:hint="Why do u need the help??"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/button16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="onClickBorrowMoney"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:fontFamily="@font/scriptmt"
            android:textSize="30dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>