<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#2a2742"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="70dp"
            android:paddingVertical="20dp"
            android:background="#d34958"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:background="@drawable/user"
                android:padding="10dp" />
        </LinearLayout>

        <TextView

            android:layout_marginTop="20dp"
            android:id="@+id/accountPageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:ems="10"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/scriptmt"
            android:textSize="40dp"
            android:text="Name" />

        <TextView
            android:id="@+id/accountPageEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:ems="10"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/scriptmt"
            android:textStyle="bold"
            android:text="Email" />

        <TextView
            android:id="@+id/accountPageMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/scriptmt"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Mobile Number" />

        <TextView
            android:textSize="30dp"
            android:id="@+id/accountPageRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/scriptmt"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="User-Role" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>