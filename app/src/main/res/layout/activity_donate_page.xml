<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonatePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:padding="10dp"
            android:background="@color/red"
            android:gravity="center"
            android:fontFamily="@font/scriptmt"
            android:text="Show a token of gesture to the farmers in form of a donation."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@color/purple"
            android:orientation="vertical">

            <TextView
                android:paddingLeft="2dp"
                android:layout_marginTop="100dp"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Enter the amount you want to donate:" />

            <EditText
                android:id="@+id/DontationPageAmount"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Amount"
                android:inputType="number"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#9E9E9E" />

            <Button
                android:onClick="onClickDonate"
                android:textAllCaps="false"
                android:id="@+id/button4"
                android:backgroundTint="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>