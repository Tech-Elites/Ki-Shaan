<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EachShopItemPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/vegfull" />

        <TextView
            android:id="@+id/EachItemPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scriptmt"
            android:padding="10dp"
            android:text="Product title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/EachItemPageDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scriptmt"
            android:padding="10dp"
            android:text="Healthy fruits and vegetables."
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/EachItemPagePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/scriptmt"
            android:padding="10dp"
            android:text="Price: 200"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/qtyavailableText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/scriptmt"
            android:paddingHorizontal="10dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/qtyInput"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/scriptmt"
            android:hint="Quantity"
            android:inputType="number"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:textColorHint="#877171" />

        <Button
            android:id="@+id/button6"
            android:layout_width="388dp"
            android:layout_height="62dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/scriptmt"
            android:onClick="buyThisItemClick"
            android:text="Buy"
            android:textAllCaps="false"
            android:textColor="@color/purple"
            android:textSize="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>