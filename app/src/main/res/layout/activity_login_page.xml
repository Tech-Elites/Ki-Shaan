<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2843"
    tools:context=".LoginPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView

            android:id="@+id/textView"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="350dp"
            android:padding="10dp"
            android:text="Log in"
            android:fontFamily="@font/scriptmt"
            android:textAlignment="center"
            android:textColor="#d34958"
            android:textSize="50dp" />

        <EditText
            android:id="@+id/loginPageEmail"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Email-ID"
            android:inputType="textPersonName"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#D6D5D5"
            android:paddingBottom="10dp" />

        <EditText
            android:id="@+id/loginPagePassword"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#D6D5D5" />

        <Button
            android:id="@+id/button"
            android:layout_width="254dp"
            android:layout_height="49dp"
            android:backgroundTint="#000000"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:text="Sign in" />

        <Button
            android:padding="10dp"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="Need a account? Click here"
            android:textColor="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>