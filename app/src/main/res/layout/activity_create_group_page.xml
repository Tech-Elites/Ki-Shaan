<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupPage"
    android:background="@drawable/back1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="447dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create and benefit!!"
            android:textSize="50dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/scriptmt"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/createGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Grp name"
            android:textSize="20dp"
            android:fontFamily="@font/scriptmt"
            android:layout_marginBottom="40dp"/>

        <EditText
            android:id="@+id/createGroupMemberCap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Member cap"
            android:fontFamily="@font/scriptmt"
            android:textSize="20dp"
            android:layout_marginBottom="40dp"/>

        <EditText
            android:id="@+id/createGroupJoinCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Group joining code"
            android:fontFamily="@font/scriptmt"
            android:textSize="20dp"
            android:layout_marginBottom="40dp"/>
        <EditText
            android:id="@+id/createGroupConfirmCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Confirm Code"
            android:fontFamily="@font/scriptmt"
            android:textSize="20dp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:onClick="onClickCreateGroup"
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create"
            android:fontFamily="@font/scriptmt"
            android:textAllCaps="false"
            android:textSize="30dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>